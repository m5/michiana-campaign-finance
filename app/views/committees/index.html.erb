<p id="notice"><%= notice %></p>

<h1>Listing Committees</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Abbreviation</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Zip</th>
      <th>City</th>
      <th>State</th>
      <th>Party</th>
      <th>Candidate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @committees.each do |committee| %>
      <tr>
        <td><%= committee.name %></td>
        <td><%= committee.abbreviation %></td>
        <td><%= committee.phone %></td>
        <td><%= committee.address %></td>
        <td><%= committee.zip %></td>
        <td><%= committee.city %></td>
        <td><%= committee.state %></td>
        <td><%= committee.party %></td>
        <td><%= committee.candidate %></td>
        <td><%= link_to 'Show', committee %></td>
        <td><%= link_to 'Edit', edit_committee_path(committee) %></td>
        <td><%= link_to 'Destroy', committee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

